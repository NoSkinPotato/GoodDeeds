<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Post_Job_Activity"
    android:orientation="vertical"
    android:background="#35374B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/BackHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="15dp"
            app:srcCompat="@drawable/arrow" />

        <TextView
            android:id="@+id/roleTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="7dp"
            android:text="Job Post"
            android:textColor="#64C3BF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center|top"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingVertical="20dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            app:cardCornerRadius="15dp"
            app:strokeColor="#64C3BF"
            app:strokeWidth="5dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp">

            <EditText
                android:id="@+id/jobTitleInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:hint="Job Title"
                android:inputType="text"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:maxLines="1"
                android:maxLength="30"
                android:textColorHint="#7077A1" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            app:cardCornerRadius="15dp"
            app:strokeColor="#64C3BF"
            app:strokeWidth="5dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp">

            <EditText
                android:id="@+id/jobRewardInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:hint="Reward"
                android:inputType="number"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:textColorHint="#7077A1" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:backgroundTint="@android:color/transparent"
            app:cardCornerRadius="15dp"
            app:strokeColor="#64C3BF"
            app:strokeWidth="5dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp">

            <EditText
                android:id="@+id/jobDescInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:gravity="top"
                android:hint="Job Description"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:inputType="textCapSentences|textMultiLine"
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp"
                android:textColorHint="#7077A1" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


    <Button
        android:id="@+id/PostJob"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="0.15"
        android:backgroundTint="#64C3BF"
        android:paddingHorizontal="80dp"
        android:text="POST"
        android:textSize="25sp"
        app:cornerRadius="20dp" />


</LinearLayout>